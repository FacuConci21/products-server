<div class="container">

    <div id="notif-container" class="toast-container end-0">
    </div>

    <!-- Button trigger modal -->
    <div class="container-fluid" id="login">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Login
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="user-login-form">
                        <div class="mb-3">
                            <label for="username" class="col-form-label">Nombre de usuario:</label>
                            <input type="text" class="form-control" id="username" name="username">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="col-form-label">Contrase√±a:</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div>
                            <a href="/registration" class="btn btn-secondary">Registrarme</a>
                            <button type="submit" class="btn btn-primary">Ok</button>
                        </div>
                    </form>
                </div>
                <div id="login-modal-footer" class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="container-fluid" id="products-container">
        <ul id="products-list" style="list-style: none;">
            {{#each products}}
            <li>
                <div class="card">
                    <div class="card-header">
                        {{this.code}}
                    </div>

                    <div class="card-body">
                        <h5 class="card-title"><a href="/products/{{this._id}}">{{this.title}}</a></h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="blockquote-footer">Stock: {{this.stock}} | Precio: \$ {{this.price}} </p>
                        <form id="add-product-{{this._id}}">
                            <input type="hidden" name="productId" id="productId" value="{{this._id}}">
                            <input type="number" class="text-center" name="quantity" id="quantity" value="1">
                            <button id="b-1" type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
                        </form>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>

    </div>

    <div class="container-fluid" id="paginate">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    {{#if hasPrevPage}}
                    <a class="page-link" href="{{prevPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    {{/if}}

                </li>
                <li class="page-item page-link">{{currentPage}}</li>
                <li class="page-item">
                    {{#if hasNextPage}}
                    <a class="page-link" href="{{nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                    {{/if}}

                </li>
                </li>
            </ul>
        </nav>
    </div>

</div>

<script src="/js/products-paginate.js"></script>