<div class="container">

    <div id="notif-container" class="toast-container end-0">
    </div>

    <div class="container-fluid" id="login">
        {{#if isLoggedUser}}
        <input type="hidden" name="loggedUsername" id="loggedUsername" value="{{userSession.username}}">
        <div class="card">
            <div id="user-logged" class="card-body">
                Logueado como {{userSession.username}}.
                <a id="cart-link" class="btn btn-outline-secondary btn-sm justify-content-md-end">Ver
                    carrito</a>
                <button id="logout-btn" type="button" class="btn btn-primary">
                    Logout
                </button>
            </div>
        </div>
        {{/if}}
    </div>

    <br>

    <div class="container-fluid" id="products-container">
        {{#if hasProducts}}
        <ul id="products-list" style="list-style: none;">

            {{#each products}}
            <li>
                <div class="card">
                    <div class="card-header">
                        {{this.code}}
                    </div>

                    <div class="card-body">
                        <h5 class="card-title"><a href="/products/{{this._id}}">{{this.title}}</a></h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="blockquote-footer">Stock: {{this.stock}} | Precio: \$ {{this.price}} </p>
                        <form id="add-product-{{this._id}}">
                            <input type="hidden" name="productId" value="{{this._id}}">
                            <input type="number" class="text-center" name="quantity" value="1">
                            <button type="submit" class="btn btn-outline-secondary">Agregar al carrito</button>
                        </form>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <div class="alert alert-danger" role="alert">
            No se obtuvieron productos desde el servidor
        </div>
        {{/if}}
    </div>

    <div class="container-fluid" id="paginate">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    {{#if hasPrevPage}}
                    <a class="page-link" href="{{prevPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    {{/if}}

                </li>
                <li class="page-item page-link">{{currentPage}}</li>
                <li class="page-item">
                    {{#if hasNextPage}}
                    <a class="page-link" href="{{nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                    {{/if}}

                </li>
                </li>
            </ul>
        </nav>
    </div>

</div>

<script src="/js/products-paginate.js"></script>