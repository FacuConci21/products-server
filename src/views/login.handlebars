<div class="container" id="login">

    <br>

    <div id="login-result">
        {{#if isLoggedUser}}
        <div class="alert alert-success" role="alert">
            Bienvenido {{userSession.username}}, ya te encuentras logueado.
        </div>
        {{/if}}
    </div>

    <div id="notif-container" class="toast-container end-0">
    </div>

    <form id="user-login-form">
        <div class="mb-3">
            {{#if isLoggedUser}}
            <label for="email" class="col-form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="{{userSession.email}}"
                disabled>
            {{else}}
            <label for="email" class="col-form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email">
            {{/if}}
        </div>
        <div class="mb-3">
            {{#if isLoggedUser}}
            <label for="password" class="col-form-label">Contraseña:</label>
            <input type="password" class="form-control" id="password" name="password" value="fakepassword" disabled>
            {{else}}
            <label for="password" class="col-form-label">Contraseña:</label>
            <input type="password" class="form-control" id="password" name="password">
            {{/if}}
        </div>
        <div>
            {{#if isLoggedUser}}
            <a href="/products?limit=4&page=1" class="btn btn-secondary">Ver catalogo</a>
            <button type="submit" class="btn btn-primary" disabled>Ok</button>
            {{else}}
            <a href="/auth/registration" class="btn btn-secondary">Registrarme</a>
            <button type="submit" class="btn btn-primary">Login</button>

            <hr>

            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                <a href="/auth/login/github" class="btn btn-dark">Login with GitHub</a>
            </div>
            {{/if}}
        </div>
    </form>
</div>

<script src="/js/login.js"></script>