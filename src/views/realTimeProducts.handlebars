<div class="container">

    <ul class="nav">
        <div class="card-body">
            <h1 class="text-center">Lista de Productos</h1>
        </div>
        <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/products?limit=4&page=1">Paginas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/realtimeproducts">Real Time Products</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/chat">Chat</a>
        </li>
    </ul>

    <br>

    <div class="accordion" id="accordionExample">
        <div class="accordion-item" id="accordion">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Crear un nuevo producto
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample" style="">
                <div class="accordion-body">

                    <form id="create-form">
                        <div class="mb-3">
                            <label for="title" class="form-label">Titulo</label>
                            <input name="title" type="text" class="form-control" id="title" aria-describedby="emailHelp"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripcion</label>
                            <input name="description" type="text" class="form-control" id="description"
                                aria-describedby="emailHelp" required>
                        </div>
                        <div class="mb-3">
                            <label for="code" class="form-label">Codigo de producto</label>
                            <input name="code" type="text" class="form-control" id="code" aria-describedby="emailHelp"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Precio unitario</label>
                            <input name="price" type="number" class="form-control" id="price"
                                aria-describedby="emailHelp" required>
                        </div>
                        <div class="mb-3">
                            <label for="stock" class="form-label">Cantidad en stock</label>
                            <input name="stock" type="number" class="form-control" id="stock"
                                aria-describedby="emailHelp" required>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="status" name="status"
                                checked>
                            <label class="form-check-label" for="status">Estado</label>
                        </div>

                        <div class="mb-3">
                            <label for="thumbnails" class="form-label">Cargue la/s imagen/es del producto</label>
                            <input class="form-control" type="file" id="thumbnails" accept=".jpg, .png"
                                name="thumbnails" multiple>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="container-fluid" id="products-list">
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/create-product.js"></script>